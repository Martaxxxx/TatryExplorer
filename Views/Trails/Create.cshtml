@model TatryExplorer.Models.Trail

<h2>Create New Trail</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LengthKm" class="control-label"></label>
        <input asp-for="LengthKm" class="form-control" />
        <span asp-validation-for="LengthKm" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TimeToComplete" class="control-label"></label>
        <input asp-for="TimeToComplete" class="form-control" />
        <span asp-validation-for="TimeToComplete" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DifficultyLevel" class="control-label"></label>
        <input asp-for="DifficultyLevel" class="form-control" />
        <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>